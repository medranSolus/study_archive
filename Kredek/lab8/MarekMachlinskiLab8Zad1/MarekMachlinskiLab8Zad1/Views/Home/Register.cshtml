@model MarekMachlinskiLab8Zad1.Database.MarekMachlinskiPlayer
@{
    ViewBag.Title = "Register";
}
<section id="main-section" class="text-center">
    <!--Tytuł strony-->
    <h2 class="font center label-warning" style="width:400px; color: crimson; border-radius: 0px 0px 50px 10px;">Register</h2>
    <!--Formularz umożliwiający zarejestrowanie nowego użytkownika-->
    @using (Html.BeginForm("AddPlayer", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal center" style="width:400px;">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "control-label col-md-2 font", @style = "color: whitesmoke;" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control font" } })
                @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger font" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2 font", @style = "color: whitesmoke;" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control font", @type = "password" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger font" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-0 col-md-10">
                <!--Przycisk powrotu do strony głównej bez rejestracji-->
                @Html.ActionLink("Back", "Index", "Home", new { @class = "btn btn-default font" })
                <input type="submit" value="Register" class="btn btn-danger font" />
            </div>
        </div>
    </div>
    }
</section>
